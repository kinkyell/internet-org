{{#extend "layout"}}

    {{#content "body" mode="append"}}

    <div class="viewWindow isShifted">
        <div class="viewWindow-panel">
            <div class="viewWindow-panel-content">
                <div class="viewWindow-panel-content-inner">

                        {{>homepage-content}}

                </div>
            </div>
        </div>
        <div class="viewWindow-panel viewWindow-panel_feature">
            <div class="viewWindow-panel-content">
                <div class="viewWindow-panel-content-inner">

                    <img src="../assets/media/images/hero-img-1.jpg" alt="" />

                </div>
            </div>
        </div>
        <div class="viewWindow-panel viewWindow-panel_story isActive">
            <div class="viewWindow-panel-content">
                <div class="viewWindow-panel-content-inner">

                        {{>substory-content}}

                </div>
            </div>
        </div>
    </div>

    {{/content}}

{{/extend}}
