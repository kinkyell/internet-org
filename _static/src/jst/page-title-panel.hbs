<div class="introBlock introBlock_fill">
    <div class="introBlock-inner">
        <div class="container">
            <div class="topicBlock">
                <div class="topicBlock-hd topicBlock-hd_plus">
                    <h2 class="hdg hdg_2">{{title}}</h2>
                </div>
                {{#if date}}
                <div class="topicBlock-subHd">
                    <div class="hdg hdg_6 mix-hdg_italic mix-hdg_gray">{{date}}</div>
                </div>
                {{/if}}
                {{#if desc}}
                <div class="topicBlock-bd">
                    <p class="bdcpy">{{desc}}</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    {{#if social}}
    <div class="introBlock-ft introBlock-ft_rule introBlock-ft_social">
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/all.js#xfbml=1&amp;version=v2.3";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        <div class="fb-like"
          data-layout="standard"
          data-action="like"
          data-show-faces="true"
          data-share="true">
        </div>
    </div>
    {{/if}}
</div>
